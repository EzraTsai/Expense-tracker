<div class="container-fluid border my-0 rounded-lg">
    <div class="d-flex justify-content-end align-self-center mt-3 mr-3">
        {{!-- <form method="GET" action="/filter" align="center"> --}}
            <div class="dropdown">
                <button class="btn btn-light dropdown-toggle btn-lg rounded-pill" type="button" id="dropdownMenuButton"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Filter<i class="fas fa-filter ml-1"></i>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    {{#each categories}}
                    <a href="/filter/:{{this._id}}" class="dropdown-item"><i class="{{this.categoryIcon}}"></i>
                        {{this.categoryName}}</a>
                    {{/each}}
                </div>
            </div>
            {{!-- <div class="form-group" style="display: inline;">
                <label for="exampleFormControlSelect1">Filter<i class="fas fa-filter ml-1"></i></label>
                <select class="form-control" id="category" name="category">
                    <option value='/filter/-1'>全部</option>
                    {{#each categories}}
                    <option value='/filter/'>{{this.categoryName}}</option>
                    {{/each}}
                </select>
            </div> --}}
        {{!-- </form> --}}
    </div>
    <div class="d-flex justify-content-around mt-3">
        <h4>Total:</h4>
        <h1 class="text-danger">{{totalAmount}}</h1>
        <span class="d-flex align-items-center">TWD</pan>
    </div>
    <hr>
    <table class="table table-striped">
        <tbody align="center">
            {{#each records}}
            <tr>
                <td><i class="
                    {{#checkIfSam this.category '家居物業'}} fas fa-home {{/checkIfSam}}
                    {{#checkIfSam this.category '交通出行'}} fas fa-shuttle-van {{/checkIfSam}}
                    {{#checkIfSam this.category '休閒娛樂'}} fas fa-grin-beam {{/checkIfSam}}
                    {{#checkIfSam this.category '餐飲食品'}} fas fa-utensils {{/checkIfSam}}
                    {{#checkIfSam this.category '其他'}} fas fa-pen {{/checkIfSam}}
                    "> {{this.name}}</i></td>
                <td>{{this.date}}</td>
                <td align="end">{{this.amount}}</td>
                <td>
                    <a class="btn" href="/records/{{this._id}}/edit">
                        <i class="fas fa-edit"></i>
                    </a>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn" data-toggle="modal" data-target="#exampleModal{{this._id}}"><i
                            class="fas fa-trash" style="display: inline;"></i></button>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal{{this._id}}" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">提醒</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    是否確定刪除『{{this.date}}，{{this.name}}』的資料
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                                    <form action="/records/{{this._id}}/?_method=DELETE" method="POST" style="display: inline;">
                                        <button type="submit" class="btn btn-primary">確定</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="./records/new">
        <button type="submit" class="btn btn-success btn-lg btn-block mt-2 mb-3">Add<i
                class="fas fa-plus ml-1"></i></button>
    </a>
</div>