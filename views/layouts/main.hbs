        {{#if isAuthenticated}}
        <a href="/users/logout" class="btn btn-light"><i class="fas fa-sign-out-alt fa-2x"></i></a>
        {{else}}
        <a href="/users/login" class="btn btn-light"><i class="fas fa-sign-in-alt fa-2x"></i></a>
        {{/if}}
    </nav>

    {{{body}}}

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
